<UserControl x:Class="BaiduPanDownloadWpf.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:res="clr-namespace:BaiduPanDownloadWpf.Assets"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/Views/Settings/OptionPage.xaml">
            <mui:ModernTab.Links>
                <!--<mui:Link DisplayName="{x:Static res:UiStringResources.SettingsPage_login}" Source="/Views/Settings/LoginPage.xaml"/>-->
                <mui:Link DisplayName="{x:Static res:UiStringResources.SettingsPage_configure}" Source="/Views/Settings/OptionPage.xaml" />
                <mui:Link DisplayName="{x:Static res:UiStringResources.SettingsPage_about}" Source="/Views/Settings/About.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
